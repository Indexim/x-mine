@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs/build/css/alertify.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs/build/css/themes/default.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<div style="margin-bottom: 20px;">
    <button onclick="btnAdd()" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fa fa-plus"></i>
        </span>
        <span class="text">Add Data</span>
    </button>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-heading clearfix">
                        <h4 class="panel-title">MASTER - @ViewBag.Title</h4>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tableBS" class="display table" style="width: 100%; cellspacing: 0;">
                                <thead>
                                    <tr>
                                        <th>TITLE</th>
                                        <th>KATEGORI USER</th>
                                        <th>TYPE</th>
                                        <th>LINK</th>
                                        <th>HIDDEN</th>
                                        <th>NEW TAB</th>
                                        <th>AKSI</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Add/Update -->
<div class="modal fade modalBS" id="modalBS" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">FORM @ViewBag.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formBS" class="forms-sample">
                    <div class="mb-3 row">
                        <label for="title" class="col-sm-3 col-form-label">Title</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="title" name="title" placeholder="Masukkan title" required>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="kategori_user_id" class="col-sm-3 col-form-label">Kategori User</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="kategori_user_id" name="kategori_user_id" required>
                                <option value="">- Pilih kategori user -</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="type" class="col-sm-3 col-form-label">Type</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="type" name="type" required>
                                <option value="">- Pilih kategori -</option>
                                <option value="General">General</option>
                                <option value="Master">Master</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="link_controller" class="col-sm-3 col-form-label">Link</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="link_controller" name="link_controller" placeholder="Controller" required>
                        </div>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="link_function" name="link_function" placeholder="Function" required>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="hidden" class="col-sm-3 col-form-label">Hidden</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="hidden" name="hidden" required>
                                <option value="">- Pilih hidden -</option>
                                <option value="true">True</option>
                                <option value="false">False</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="new_tab" class="col-sm-3 col-form-label">New Tab</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="new_tab" name="new_tab" required>
                                <option value="">- Pilih opsi new tab -</option>
                                <option value="true">True</option>
                                <option value="false">False</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnSave" onclick="insertData()" class="btn btn-primary">Save</button>
                        <button type="button" id="btnUpdate" onclick="updateData()" class="btn btn-primary">Update</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <!-- JQuery harus dimuat terlebih dahulu -->
    <script src="~/js/jquery.datatables.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/alertifyjs/build/alertify.min.js"></script>
    <script>
        var link = '@Url.Action("Function", "Controller")'
        var controller_name = "@ViewBag.Controller"
        var a
        var dataTable

        $(document).ready(function () {
            getCredentials()
            getAll()
            getKategoriUser()
        })

        function btnAdd() {
            $('#btnSave').show()
            $('#btnUpdate').hide()
            $('.modalBS').modal('show');
            $('#formBS').trigger("reset")
        }

        function btnEdit(id) {
            $('#btnSave').hide()
            $('#btnUpdate').show()
            $('#formBS').trigger("reset")
            getData(id)
            $('.modalBS').modal('show')
        }

        function getCredentials() {
            $('#insert_by').val("@Html.Raw(ViewBag.insert_by)")
        }

        function getAll() {
            var link = '@Url.Action("GetAll", "Menu")';
            dataTable = $("#tableBS").DataTable({
                "order": [[1, "desc"]],
                "ajax": {
                    "url": link,
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "title" },
                    {
                        "data": function (data, type, dataToSet) {
                            return data.kategori_user_id;  // Simplified for testing
                        }
                    },
                    { "data": "type" },
                    {
                        "data": function (data, type, dataToSet) {
                            return `${data.link_controller}/${data.link_function}`;
                        }
                    },
                    {
                        "data": function (data, type, dataToSet) {
                            return data.hidden;  // Simplified for testing
                        }
                    },
                    {
                        "data": function (data, type, dataToSet) {
                            return data.new_tab;  // Simplified for testing
                        }
                    },
                    {
                        "data": "id",
                        "render": function (data) {
                            return `
                                <button onclick="btnEdit(${data})" class="btn btn-info m-1 px-5 radius-30">
                                    <i class="fa fa-edit"></i>
                                </button>
                                <button onclick="deleteData(${data})" class="btn btn-danger m-1 px-5 radius-30" style="margin-left: 5px;">
                                    <i class="fa fa-trash"></i>
                                </button>`;
                        },
                        "orderable": false,
                        "width": "180px"
                    }
                ],
                "language": {
                    "emptyTable": "Tidak ada data"
                }
            });
            link = '@Url.Action("Function", "Controller")';
        }


        function getData(id) {
            var link = '@Url.Action("Get", "Menu")';

            $.ajax({
                type: "GET",
                url: link + '/' + id,
                success: function (data) {
                    if (data.success) {
                        $('#id').val(data.data.id)
                        $('#kategori_user_id').val(data.data.kategori_user_id)
                        $('#title').val(data.data.title)
                        $('#type').val(data.data.type)
                        $('#link_controller').val(data.data.link_controller)
                        $('#link_function').val(data.data.link_function)
                        $('#hidden').val(data.data.hidden)
                        $('#new_tab').val(data.data.new_tab)
                    } else {
                        alert(data.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Terjadi kesalahan: ' + error);
                }
            });
        }

        function insertData() {
            var link = '@Url.Action("Insert", "Menu")';
            $.ajax({
                type: "POST",
                url: link,
                data: $('#formBS').serialize(),
                success: function (data) {
                    if (data.success) {
                        $('.modalBS').modal('hide');
                        dataTable.ajax.reload();
                        alertify.notify('Data berhasil disimpan', 'success', 5);
                    } else {
                        alert(data.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert("An error occurred: " + error);
                }
            });
        }



        function updateData(id) {
            var link = '@Url.Action("Update", "Menu")';

            $.ajax({
                type: "POST",
                url: link,
                data: $('#formBS').serialize(),
                success: function (data) {
                    if (data.success) {
                        $('.modalBS').modal('hide');
                        dataTable.ajax.reload();
                        alertify.notify('Data berhasil diubah', 'success', 5);
                    } else {
                        alert(data.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert('Terjadi kesalahan: ' + error);
                }
            });
        }


        function deleteData(id) {
            var link = '@Url.Action("Delete", "Menu")';

            if (confirm('Are you sure?')) {
                $.ajax({
                    type: 'POST',
                    url: link + '/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            alertify.notify('Data berhasil dihapus', 'success', 5);
                        } else {
                            alert(data.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Terjadi kesalahan: ' + error);
                    }
                });
            }
        }

        function getKategoriUser() {
            var options = $("#kategori_user_id");
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetAll", "KategoriUser")',
                success: function (data) {
                    if (data.success) {
                        for (var a = 0; a < data.data.length; a++) {
                            options.append($("<option />").val(data.data[a].kategori).text(data.data[a].kategori));
                        }
                    } else {
                        alert(data.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert("An error occurred while fetching data: " + error);
                }
            });
        }


    </script>
}
